{
  "compilerOptions": {
    "target": "ES2020",                 // good balance for Node.js
    "module": "CommonJS",              
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                 // compiled JS goes here
    "rootDir": "./src"                  // TS source code base
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/types"]
}
